android:layout_marginTop="150dp"
android:rotation="270"



/>

<Button
android:id="@+id/paint"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Paint App"
android:layout_marginTop="150dp"
android:rotation="270"
